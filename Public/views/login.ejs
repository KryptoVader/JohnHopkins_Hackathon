<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MediCare ICU - Login</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@200..800&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            background: linear-gradient(135deg, #f6f7ff 0%, #ffffff 100%);
        }
        .glass-effect {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
        }
        .pulse-ring {
            animation: pulse-ring 2s cubic-bezier(0.215, 0.61, 0.355, 1) infinite;
        }
        @keyframes pulse-ring {
            0% { transform: scale(0.95); box-shadow: 0 0 0 0 rgba(239, 68, 68, 0.7); }
            70% { transform: scale(1); box-shadow: 0 0 0 10px rgba(239, 68, 68, 0); }
            100% { transform: scale(0.95); box-shadow: 0 0 0 0 rgba(239, 68, 68, 0); }
        }
        .animate-float {
            animation: float 6s ease-in-out infinite;
        }
        @keyframes float {
            0% { transform: translateY(0px); }
            50% { transform: translateY(-20px); }
            100% { transform: translateY(0px); }
        }
        .form-container {
            position: relative;
            min-height: 320px;
        }
        .login-form {
            position: absolute;
            width: 100%;
            opacity: 0;
            transform: translateX(20px);
            transition: all 0.5s ease-in-out;
            pointer-events: none;
        }
        .login-form.active {
            opacity: 1;
            transform: translateX(0);
            pointer-events: all;
        }
        .tab-indicator {
            position: absolute;
            height: 100%;
            width: 50%;
            background: white;
            border-radius: 10px;
            transition: transform 0.3s ease;
            z-index: 0;
        }
        .tab-button {
            position: relative;
            z-index: 1;
            transition: all 0.3s ease;
        }
        .tab-button.active {
            color: #EF4444;
        }
        .form-field {
            margin-bottom: 1rem;
        }
        .form-field:last-of-type {
            margin-bottom: 1.5rem;
        }
    </style>
</head>

<body class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100">
    <!-- Navigation -->
    <nav class="glass-effect shadow-lg sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4">
            <div class="flex justify-between h-16">
                <div class="flex items-center space-x-4">
                    <div class="relative pulse-ring rounded-full p-2">
                        <i class="fas fa-heartbeat text-red-500 text-2xl"></i>
                        <div class="absolute -top-1 -right-1 w-3 h-3 bg-green-500 rounded-full border-2 border-white"></div>
                    </div>
                    <div class="text-gray-800 text-xl font-extrabold tracking-tight">
                        Medi<span class="text-red-500">Care</span>
                        <span class="text-sm font-medium bg-red-50 text-red-500 px-2 py-1 rounded-full ml-2">ICU Portal</span>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <!-- Login Container -->
    <div class="min-h-[calc(100vh-4rem)] flex items-center justify-center py-8 px-4 sm:px-6 lg:px-8">
        <div class="max-w-6xl w-full">
            <div class="relative glass-effect rounded-3xl overflow-hidden shadow-2xl flex flex-col md:flex-row">
                <!-- Left Side - Decorative -->
                <div class="md:w-1/3 bg-gradient-to-br from-red-500 to-red-600 p-8 text-white hidden md:flex flex-col justify-center items-center">
                    <div class="animate-float">
                        <i class="fas fa-hospital-user text-6xl mb-6 opacity-90"></i>
                        <h2 class="text-2xl font-bold mb-3">Welcome Back</h2>
                        <p class="text-red-100 text-center text-sm">Access your healthcare portal securely and efficiently</p>
                    </div>
                </div>

                <!-- Right Side - Login Forms -->
                <div class="md:w-2/3 p-8">
                    <div class="text-center mb-6">
                        <h2 class="text-2xl font-bold text-gray-900">Sign In</h2>
                        <p class="mt-1 text-gray-600 text-sm">Please select your role to continue</p>
                    </div>

                    <!-- Role Selection Tabs -->
                    <div class="relative rounded-xl bg-gray-100 p-1 mb-6">
                        <div class="tab-indicator"></div>
                        <div class="flex relative z-10">
                            <button id="doctorTab"
                                class="tab-button flex-1 py-2 px-6 rounded-xl text-center font-medium flex items-center justify-center gap-2"
                                onclick="switchTab('doctor')">
                                <i class="fas fa-user-md"></i>Doctor
                            </button>
                            <button id="patientTab"
                                class="tab-button flex-1 py-2 px-6 rounded-xl text-center font-medium flex items-center justify-center gap-2"
                                onclick="switchTab('patient')">
                                <i class="fas fa-users"></i>Patient/Family
                            </button>
                        </div>
                    </div>

                    <!-- Forms Container -->
                    <div class="form-container">
                        <!-- Doctor Login Form -->
                        <div id="doctorLogin" class="login-form">
                            <form method="post" action="/login">
                                <div class="form-field">
                                    <label class="block text-sm font-medium text-gray-700 mb-1">Medical ID</label>
                                    <div class="relative">
                                        <i class="fas fa-id-card absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                                        <input type="text" required
                                            class="pl-10 block w-full px-4 py-2.5 border border-gray-200 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all duration-300">
                                    </div>
                                </div>
                                <div class="form-field">
                                    <label class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                                    <div class="relative">
                                        <i class="fas fa-lock absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                                        <input type="password" required
                                            class="pl-10 block w-full px-4 py-2.5 border border-gray-200 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all duration-300">
                                        <button 
                                            type="button"
                                            onclick="togglePassword(this)"
                                            class="absolute inset-y-0 right-0 pr-4 flex items-center text-gray-400 hover:text-gray-600"
                                        >
                                            <i class="fas fa-eye"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="form-field flex items-center justify-between">
                                    <div class="flex items-center">
                                        <input type="checkbox" class="h-4 w-4 text-red-500 border-gray-300 rounded">
                                        <label class="ml-2 block text-sm text-gray-700">Remember me</label>
                                    </div>
                                    <a href="#" class="text-sm text-red-500 hover:text-red-600 transition-colors duration-300">Forgot password?</a>
                                </div>
                                <button type="submit"
                                    class="w-full py-2.5 px-4 rounded-xl shadow-lg text-white bg-gradient-to-r from-red-500 to-red-600 hover:from-red-600 hover:to-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-all duration-300 transform hover:-translate-y-0.5">
                                    Sign in as Doctor
                                </button>
                            </form>
                        </div>

                        <!-- Patient/Family Login Form -->
                        <div id="patientLogin" class="login-form">
                            <form method="post" action="/login">
                                <div class="form-field">
                                    <label class="block text-sm font-medium text-gray-700 mb-1">Patient ID</label>
                                    <div class="relative">
                                        <i class="fas fa-hospital-user absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                                        <input type="text" required
                                            class="pl-10 block w-full px-4 py-2.5 border border-gray-200 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all duration-300">
                                    </div>
                                </div>
                                <div class="form-field">
                                    <label class="block text-sm font-medium text-gray-700 mb-1">Access Code</label>
                                    <div class="relative">
                                        <i class="fas fa-key absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                                        <input type="password" required
                                            class="pl-10 block w-full px-4 py-2.5 border border-gray-200 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all duration-300">
                                        <button 
                                            type="button"
                                            onclick="togglePassword(this)"
                                            class="absolute inset-y-0 right-0 pr-4 flex items-center text-gray-400 hover:text-gray-600"
                                        >
                                            <i class="fas fa-eye"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="form-field">
                                    <label class="block text-sm font-medium text-gray-700 mb-1">Relationship to Patient</label>
                                    <div class="relative">
                                        <i class="fas fa-users absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                                        <select
                                            class="pl-10 block w-full px-4 py-2.5 border border-gray-200 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all duration-300">
                                            <option>Patient</option>
                                            <option>Immediate Family</option>
                                            <option>Legal Guardian</option>
                                            <option>Authorized Representative</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-field flex items-center">
                                    <input type="checkbox" required class="h-4 w-4 text-red-500 border-gray-300 rounded">
                                    <label class="ml-2 block text-sm text-gray-700">I agree to the privacy policy and
                                        consent to access patient information</label>
                                </div>
                                <button type="submit"
                                    class="w-full py-2.5 px-4 rounded-xl shadow-lg text-white bg-gradient-to-r from-red-500 to-red-600 hover:from-red-600 hover:to-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-all duration-300 transform hover:-translate-y-0.5">
                                    Access Patient Portal
                                </button>
                            </form>
                        </div>
                    </div>

                    <!-- Help Section -->
                    <div class="text-center mt-6 pt-4 border-t border-gray-200">
                        <p class="text-gray-600 text-sm">Need assistance? <i class="fas fa-phone text-red-500 mx-1"></i><span class="text-gray-700 font-medium">(555) 123-4567</span></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function togglePassword(button) {
            const input = button.parentElement.querySelector('input');
            const icon = button.querySelector('i');
            
            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        }

        function switchTab(role) {
            const doctorTab = document.getElementById('doctorTab');
            const patientTab = document.getElementById('patientTab');
            const doctorLogin = document.getElementById('doctorLogin');
            const patientLogin = document.getElementById('patientLogin');
            const tabIndicator = document.querySelector('.tab-indicator');

            if (role === 'doctor') {
                tabIndicator.style.transform = 'translateX(0)';
                doctorTab.classList.add('active');
                patientTab.classList.remove('active');
                doctorLogin.classList.add('active');
                patientLogin.classList.remove('active');
            } else {
                tabIndicator.style.transform = 'translateX(100%)';
                patientTab.classList.add('active');
                doctorTab.classList.remove('active');
                patientLogin.classList.add('active');
                doctorLogin.classList.remove('active');
            }
        }

        // Initialize the first tab
        switchTab('doctor');
    </script>
</body>
</html>