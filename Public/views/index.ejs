    <script>
        // Heart Rate Chart Animation
        const heartRateCtx = document.getElementById('heartRateChart').getContext('2d');
        const heartRateChart = new Chart(heartRateCtx, {
            type: 'line',
            data: {
                labels: Array(20).fill(''),
                datasets: [{
                    data: Array(20).fill(75),
                    borderColor: 'rgb(239, 68, 68)',
                    borderWidth: 2,
                    tension: 0.4,
                    fill: false
                }]
            },
            options: {
                responsive: true,
                plugins: { legend: { display: false } },
                scales: {
                    x: { display: false },
                    y: { display: false, min: 60, max: 90 }
                },
                animation: false
            }
        });

        // ECG Monitor Animation
        const ecgCtx = document.getElementById('ecgMonitor').getContext('2d');
        const ecgChart = new Chart(ecgCtx, {
            type: 'line',
            data: {
                labels: Array(100).fill(''),
                datasets: [{
                    data: Array(100).fill(0),
                    borderColor: 'rgb(366, 0, 0)',
                    borderWidth: 2,
                    tension: 0,
                    fill: false
                }]
            },
            options: {
                responsive: true,
                plugins: { legend: { display: false } },
                scales: {
                    x: { display: false },
                    y: { display: false, min: -2, max: 2 }
                },
                animation: false
            }
        });

        // SpO2 Chart
        const oxygenCtx = document.getElementById('oxygenChart').getContext('2d');
        const oxygenChart = new Chart(oxygenCtx, {
            type: 'line',
            data: {
                labels: Array(20).fill(''),
                datasets: [{
                    data: Array(20).fill(98),
                    borderColor: 'rgb(59, 130, 246)', // Blue color
                    borderWidth: 2,
                    tension: 0.4,
                    fill: false
                }]
            },
            options: {
                responsive: true,
                plugins: { legend: { display: false } },
                scales: {
                    x: { display: false },
                    y: { display: false, min: 90, max: 100 }
                },
                animation: false
            }
        });

        // Blood Pressure Chart
        const bpCtx = document.getElementById('bpChart').getContext('2d');
        const bpChart = new Chart(bpCtx, {
            type: 'line',
            data: {
                labels: Array(20).fill(''),
                datasets: [{
                    data: Array(20).fill(120),
                    borderColor: 'rgb(34, 197, 94)', // Green color
                    borderWidth: 2,
                    tension: 0.4,
                    fill: false
                }]
            },
            options: {
                responsive: true,
                plugins: { legend: { display: false } },
                scales: {
                    x: { display: false },
                    y: { display: false, min: 90, max: 150 }
                },
                animation: false
            }
        });

        // Temperature Chart
        const tempCtx = document.getElementById('tempChart').getContext('2d');
        const tempChart = new Chart(tempCtx, {
            type: 'line',
            data: {
                labels: Array(20).fill(''),
                datasets: [{
                    data: Array(20).fill(37.2),
                    borderColor: 'rgb(249, 115, 22)', // Orange color
                    borderWidth: 2,
                    tension: 0.4,
                    fill: false
                }]
            },
            options: {
                responsive: true,
                plugins: { legend: { display: false } },
                scales: {
                    x: { display: false },
                    y: { display: false, min: 35, max: 39 }
                },
                animation: false
            }
        });


        // Progress Chart
        const progressCtx = document.getElementById('progressChart').getContext('2d');
        new Chart(progressCtx, {
            type: 'line',
            data: {
                labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
                datasets: [{
                    label: 'Recovery Progress',
                    data: [45, 52, 58, 63, 70, 75, 78],
                    borderColor: 'rgb(34, 197, 94)',
                    tension: 0.4,
                    fill: true,
                    backgroundColor: 'rgba(34, 197, 94, 0.1)'
                }]
            },
            options: {
                responsive: true,
                plugins: { legend: { display: false } },
                scales: {
                    y: { min: 0, max: 100 }
                }
            }
        });

        // Animate ECG
        function generateECGPoint() {
            const t = Date.now() / 1000;
            return Math.sin(t * 10) * Math.exp(-Math.pow((t % 1) * 5 - 2, 2));
        }

        // Update animations
        setInterval(() => {
            // Update Heart Rate
            const newHeartRate = heartRateChart.data.datasets[0].data;
            newHeartRate.push(75 + Math.random() * 5);
            newHeartRate.shift();
            heartRateChart.update();

            // Update SpO2
            const newOxygen = oxygenChart.data.datasets[0].data;
            newOxygen.push(98 + Math.random() * 1);
            newOxygen.shift();
            oxygenChart.update();

            // Update Blood Pressure
            const newBP = bpChart.data.datasets[0].data;
            newBP.push(120 + Math.random() * 8);
            newBP.shift();
            bpChart.update();

            // Update Temperature
            const newTemp = tempChart.data.datasets[0].data;
            newTemp.push(37.2 + Math.random() * 0.3);
            newTemp.shift();
            tempChart.update();

            // Update ECG
            const newECG = ecgChart.data.datasets[0].data;
            newECG.push(generateECGPoint());
            newECG.shift();
            ecgChart.update();
        }, 85);

        // Chat functionality
        function toggleChat() {
            const chatWindow = document.getElementById('chatWindow');
            chatWindow.classList.toggle('hidden');
        }

        function sendMessage() {
            const input = document.getElementById('messageInput');
            const message = input.value.trim();
            if (message) {
                const chatMessages = document.getElementById('chatMessages');

                // Create user message
                const userMessage = document.createElement('div');
                userMessage.className = 'mb-4 text-right';
                userMessage.innerHTML = `
                    <div class="bg-red-500 text-white rounded-lg p-3 inline-block">
                        ${message}
                    </div>
                `;
                chatMessages.appendChild(userMessage);

                input.value = '';

                // Simulate AI response
                setTimeout(() => {
                    const aiResponse = document.createElement('div');
                    aiResponse.className = 'mb-4';
                    aiResponse.innerHTML = `
                        <div class="bg-gray-100 rounded-lg p-3 inline-block">
                            I'm processing your message: "${message}"
                        </div>
                    `;
                    chatMessages.appendChild(aiResponse);
                    chatMessages.scrollTop = chatMessages.scrollHeight;
                }, 1000);

                chatMessages.scrollTop = chatMessages.scrollHeight;
            }
        }

        // Allow sending message with Enter key
        document.getElementById('messageInput').addEventListener('keypress', function (e) {
            if (e.key === 'Enter') {
                sendMessage();
            }
        });
    </script>
